<article class="post">
	<section class="post-head">
		<h2><%= link_to post.title, post_path(post) %></h2>
		<small>
			<time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
			|
			<%= link_to 'змiнити', edit_post_path(post)%>
			|
			<%= link_to 'видалити', post_path(post), method: :delete, data: {confirm: 'ви впевненi?'}%>
		</small>
	</section>

	<section class="post-summary clearfix">
		<%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' %>
		<%= post.summary %>
	</section>


</article>


